<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_entry"
    android:background="#009999">

    <ImageView
        android:id="@+id/ImageEntryTheme"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@drawable/transparentwm"
        android:layout_marginTop="240dp"
        />

    <Button
        android:id="@+id/ButtonEntryPG"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:backgroundTint="#CCFFFF"
        android:text="PLAY GAME"
        android:gravity = "center"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/ButtonEntryHS"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:backgroundTint="#CCFFFF"
        android:text="HIGH SCORE"
        android:gravity = "center"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_below="@+id/ButtonEntryPG"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/ButtonEntryExit"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:backgroundTint="#CCFFFF"
        android:text="FLASH CARDS"
        android:gravity = "center"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_below="@+id/ButtonEntryHS"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

</RelativeLayout>
