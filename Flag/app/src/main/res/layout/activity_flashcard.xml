<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1EB4F0"
    tools:context=".activity.activityFlashCard">

    <TextView
        android:id="@+id/TextFCardTitle"
        android:layout_width="340dp"
        android:layout_height="600dp"
        android:background="#4682B4"
        android:text="FLASH CARDS"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="38dp"
        android:textStyle="bold"
        android:layout_marginTop="65dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/ImgFCardFlag"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@null"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        />

    <Button
        android:id="@+id/ButtonFCardCountry"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:backgroundTint="#E0FFFF"
        android:text=""
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/ImgFCardFlag"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/ButtonNext"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/TextFCardTitle"
        android:layout_marginStart="360dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/baseline_east_24"
        android:backgroundTint="#4682B4"
        android:contentDescription="Next"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/ButtonStopMusic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="StopMusic"
        android:layout_marginStart="360dp"
        android:background="@drawable/baseline_pause_circle_24"
        android:backgroundTint="@color/white"
        />

</RelativeLayout>